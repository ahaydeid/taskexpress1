<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task 4- Ahadi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/contact.css" />
  </head>
  <body>
<!-- Navbar menggunakan partial HBS -->
{{> header }}

      <!-- Awal Form -->
      <div class="form d-flex justify-content-center">
          <form class="p-3">
               <h1 class="text-center text-black fw-bold" style="font-size: 55px;">GET IN TOUCH</h1>
               <div class="mb-3">
               <label for="nama" class="form-label">Name</label>
               <input type="text" class="form-control" id="nama">
               <div class="mb-3">
               <label for="email" class="form-label">Email</label>
               <input type="email" class="form-control" id="email">
               </div>
               <div class="mb-3">
               <label for="phone" class="form-label">Phone Number</label>
               <input type="tel" class="form-control" id="phone">
               </div>
               <!-- Label Drowdown -->
               <label for="exampleInputPassword1" class="form-label">Subject 
               </label>
               <div class="dropdown">
                <button class="btn bg-white d-flex justify-content-end w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <span id="dropdownText" class="mx-auto"></span>
                  <div class="icon ms-2">
                    <img class="mt-2 me-2" width="25" height="25" src="https://img.icons8.com/material-rounded/48/give-way.png" alt="give-way" />
                  </div>
                </button>
                <ul class="dropdown-menu dropdown-menu-end fs-2 w-100" id="dropdownValue">
                  <li><a class="dropdown-item">Subject 1</a></li>
                  <li><a class="dropdown-item">Subject 2</a></li>
                  <li><a class="dropdown-item">Subject 3</a></li>
                </ul>
              </div>              


               <div class="mb-3">
               <label for="pesan" class="form-label">Your message</label>
               <textarea class="form-control" id="pesan" style="height: 200px;"></textarea>
              </div>

               <!-- Button Submit -->
                <div class="wrapper-submit d-flex justify-content-end mt-5">
                    <button type="submit" class="btn bg-black text-white fw-bold btn-submit rounded-5" onclick="getData(event)">submit</button>
                </div>
           </form>
       </div>
      <!-- Akhir Form -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    <script src="/assets/js/contact.js"></script>
  </body>
</html>