<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Project - Ahadi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous" />
    <link rel="stylesheet" href="/assets/css/project.css" />
    <link rel="stylesheet" href="/assets/css/header.css" />
  </head>
  <body>
<!-- Navbar menggunakan partial HBS -->
{{> header }}
<!-- Awal Form -->
<div class="part-1">
      <div class="form d-flex justify-content-center">
        <form class="p-3" method="post" id="project-form" action="/submit" enctype="multipart/form-data">
          <h1 class="text-center text-black fw-bold" style="font-size: 55px">ADD MY PROJECT</h1>
          <div class="mb-3">
            <label for="name" class="form-label">Project Name</label>
            <input type="text" class="form-control" id="name" name="name" />
          </div>
          <div class="row">
            <div class="col-6">
              <div class="mb-3">
                <label for="start-date" class="form-label" >Start Date</label>
                <input type="date" class="form-control" id="start-date" name="start-date" />
              </div>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label for="end-date" class="form-label">End Date</label>
                <div class="d-flex justify-content-end">
                  <input type="date" class="form-control" id="end-date" name="end-date" />
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea class="form-control" id="desc" style="height: 200px" name="desc"></textarea>
          </div>
          <div class="mb-3">
            <label for="tech" class="form-label">Technologies</label>
            <div class="row text-secondary">
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="node" value="node" name="node" /> 
                <label for="node">&nbspNode Js</label>
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="next" value="next" name="next"/> 
                <label for="next">&nbspNext Js</label>
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="react" value="react" name="react"/>
                <label for="react">&nbspReact Js</label> 
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="typescript" value="typescript" name="typescript"/> 
                <label for="typescript">&nbspTypeScript</label> 
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="file" class="form-label">Upload Image</label>
            <div class="custom-file-upload">
              <span class="choose-label">choose</span>
              <input class="file-input" id="file-input" type="file" name="image-project">
              <span class="icon">
                <img src="/assets/icons/clip.svg" alt="icon" style="height: 40px;">
              </span>
            </div>
          </div>
          
          <!-- Button Submit -->
          <div class="wrapper-submit d-flex justify-content-end mt-5">
            <button type="submit" class="btn bg-black text-white fw-bold btn-submit rounded-5">submit</button>
          </div>
        </form>
  </div>
</div>
    <!-- Akhir Form -->
<div class="part-2">
  <h1 class="fw-bold d-flex justify-content-center mb-4">MY PROJECT</h1>

  <div class="project-container"> 
{{#each project}}
<div class="project-card">
      <a href="/project/{{id}}" class="card-link">
        <img src="/uploads/{{this.image_path}}" alt="{{this.name}}" style="width: 100%; height: 250px; object-fit: cover; border-radius: 5px;" />
      </a>
  <div class="year" style="display: flex;">
    <h5 class="mt-3" style="font-size: 17px;">{{this.name}}</h5>
    <h5 class="mt-3" style="font-size: 17px;">&nbsp;-&nbsp;{{this.year}}</h5>
  </div>
  <div class="mb-3 text-secondary" style="display: flex;">
    <h6 class="me-2" style="font-size: 14px;">Durasi :</h6>
    <h6 style="font-size: 14px;" class="month">{{this.duration}}</h6>
  </div>
  <div class="desc-box">
    <p style="font-size: 14px; margin-right: 25px;" id="desc-text">{{this.description}}</p>
  </div>
  <div class="mb-3 text-secondary d-flex" style="gap: 15px;">
      {{#each technologies}}
        <img class="icon-stack" style="width: 40px; height: 40px;" src="/assets/icons/{{this}}.svg" alt="{{this}}">
      {{/each}}
  </div>

  <div class="button-card mb-3" style="display: flex; padding: 5px; gap: 10px;">
    <a href="/project/edit/{{this.id}}" class="btn edit flex-fill">Edit</a>
    <form action="/project/delete/{{id}}" method="POST" onsubmit="return confirm('Yakin ingin menghapus?')" class="btn edit flex-fill">
      <button type="submit" style="all: unset; cursor: pointer;">Hapus</button>
    </form>
  </div>
</div>
{{/each}}
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    <script src="/assets/js/project.js"></script>
  </body>
</html>
