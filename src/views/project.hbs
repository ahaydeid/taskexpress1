          </div>
          <div class="mb-3">
            <label for="tech" class="form-label">Technologies</label>
            <div class="row text-secondary">
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="node" value="node" /> 
                <label for="node">&nbspNode Js</label>
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="next" value="next" /> 
                <label for="next">&nbspNext Js</label>
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="react" value="react" />
                <label for="react">&nbspReact Js</label> 
              </div>
              <div class="col-6">
                <input class="checkbox" type="checkbox" id="typescript" value="typescript" /> 
                <label for="typescript">&nbspTypeScript</label> 
              </div>
            </div>
          </div>
          

          <div class="mb-3">
            <label for="file" class="form-label">Upload Image</label>
            <div class="custom-file-upload">
              <span class="choose-label">choose</span>
              <input class="file-input" id="file-input" type="file">
              <span class="icon">
                <img src="/assets/icons/clip.svg" alt="icon" style="height: 40px;">
              </span>
            </div>
          </div>
          
          <!-- Button Submit -->
          <div class="wrapper-submit d-flex justify-content-end mt-5">
            <button type="submit" class="btn bg-black text-white fw-bold btn-submit rounded-5" onclick="getData(event)">submit</button>
          </div>
        </form>
  </div>
